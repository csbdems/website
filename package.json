{
	"name": "csbdems-website",
	"version": "0.0.1",
	"description": "A website with information about the Democratic Candidates for the Cheltenham School Board",
	"repository": "git@github.com:slifty/csbdems/website.git",
	"author": "Daniel Schultz <schultzd@alum.mit.edu>",
	"license": "AGPL-3.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc",
		"lint:eslint": "eslint ./src --max-warnings=0",
		"lint:tsc": "tsc --noEmit",
		"lint:prettier": "prettier . --check",
		"format": "npm run format:eslint && npm run format:prettier",
		"format:eslint": "eslint ./src --fix || true",
		"format:prettier": "prettier . --write"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.34.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.6",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^6.3.4"
	}
}
